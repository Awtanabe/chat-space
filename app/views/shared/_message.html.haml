- id = message.id
.main-message-box.clearfix{data: {id: id}}
  .main-message-box__user-name
    = message.user.name
  .main-message-box__date
    = message.created_at.strftime('%Y/%m/%d %H:%M:%S')
  .main-message-box__comment
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
